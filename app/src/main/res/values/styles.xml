<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<style name="AppTheme" parent="android:Theme.Holo.NoActionBar">-->
        <!-- Customize your theme here. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dropDownSpinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:actionBarStyle">@style/JSActionBarTheme</item>
    </style>

    <style name="main_btn_style">
        <item name="android:button">@null</item>
        <item name="android:textSize">12dp</item>
        <!--<item name="android:textColor">#ffffff</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
        <!--<item name="android:background">@drawable/main_btn_bg_d</item>-->
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_dark</item>
    </style>

    <style name="JSActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/apptheme_ab_transparent_apptheme</item>
        <item name="android:progressBarStyle">@style/JSProgressBarTheme</item>
    </style>

    <style name="JSProgressBarTheme" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal</item>
    </style>

    <style name="SplashScreenTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>
