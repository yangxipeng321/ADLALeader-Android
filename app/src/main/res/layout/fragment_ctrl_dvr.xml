<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dvr2" />
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/screen_dvr"-->
            <!--android:textSize="50sp"/>-->
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/controlContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/btnDVRHome"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_centerInParent="true"
            android:text="@string/dvr_home"
            android:contentDescription="@string/dvr_home" />
        <Button
            android:id="@+id/btnDVRConfirm"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_alignTop="@id/btnDVRHome"
            android:layout_toEndOf="@id/btnDVRHome"
            android:layout_toRightOf="@id/btnDVRHome"
            android:text="@string/confirm"
            android:contentDescription="@string/confirm"/>
        <Button
            android:id="@+id/btnDVRCancel"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_alignTop="@id/btnDVRHome"
            android:layout_toLeftOf="@id/btnDVRHome"
            android:layout_toStartOf="@id/btnDVRHome"
            android:text="@string/dvr_cancel"
            android:contentDescription="@string/dvr_cancel"/>
        <Button
            android:id="@+id/btnDVRUp"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_above="@id/btnDVRHome"
            android:layout_alignLeft="@id/btnDVRHome"
            android:layout_alignStart="@id/btnDVRHome"
            android:text="@string/dvr_up"
            android:contentDescription="@string/dvr_up"/>
        <Button
            android:id="@+id/btnDVRDown"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_below="@id/btnDVRHome"
            android:layout_alignLeft="@id/btnDVRHome"
            android:layout_alignStart="@id/btnDVRHome"
            android:text="@string/dvr_down"
            android:contentDescription="@string/dvr_down"/>
        <Button
            android:id="@+id/btnScrVideo"
            android:layout_width="@dimen/dvr_button_size"
            android:layout_height="@dimen/dvr_button_size"
            android:layout_below="@id/btnDVRConfirm"
            android:text="@string/screen_video"
            android:contentDescription="@string/screen_video"/>
    </RelativeLayout>
</LinearLayout>
