<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hk.com.mobileye.jason.adlaleader">

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_adasleader"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <meta-data
            android:name="CHANNEL"
            android:value="${CHANNEL_VALUE}" />

        <activity
            android:name=".MainActivity2"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm" />
        <activity
            android:name=".NightViewActivity"
            android:label="@string/title_activity_night_view" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".SettingsActivity" />

        <provider
            android:name=".TestProvider"
            android:authorities="test"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".net.UdpService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".net.TcpIntentService"
            android:exported="false" />
        <service
            android:name=".net.DownloadIntentService"
            android:exported="false" />
        <service
            android:name=".net.CheckUpgradeIntentService"
            android:exported="false" />

        <activity
            android:name=".DVRActivity"
            android:label="@string/title_activity_dvr" />
        <activity android:name=".ChartActivity" />
        <activity android:name=".debug.DebugActivity"/>
    </application>

</manifest>