<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adasleader.jason.adasleader">

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.adasleader.jason.adasleader.common.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_adasleader"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:theme="@style/SplashScreenTheme"
        tools:replace="android:icon">
        <!--<meta-data-->
            <!--android:name="CHANNEL"-->
            <!--android:value="${CHANNEL_VALUE}" />-->
        <activity
            android:name="com.adasleader.jason.adasleader.MainActivity2"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adasleader.jason.adasleader.AlarmActivity"
            android:label="@string/title_activity_alarm" />
        <activity
            android:name="com.adasleader.jason.adasleader.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.adasleader.jason.adasleader.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.adasleader.jason.adasleader.SettingsActivity" />

        <service
            android:name="com.adasleader.jason.adasleader.net.UdpService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.adasleader.jason.adasleader.net.TcpIntentService"
            android:exported="false" />
        <service
            android:name="com.adasleader.jason.adasleader.net.DownloadIntentService"
            android:exported="false" />
        <service
            android:name="com.adasleader.jason.adasleader.net.CheckUpgradeIntentService"
            android:exported="false" />
        <activity
            android:name="com.adasleader.jason.adasleader.DVRActivity"
            android:label="@string/title_activity_dvr" />
        <activity android:name="com.adasleader.jason.adasleader.ChartActivity" />
        <activity android:name="com.adasleader.jason.adasleader.debug.DebugActivity"/>
    </application>

</manifest>